  <div class="contador">
    Estamos juntos há <span id="tempo" class="destaque"></span>!
  </div>

  <script>
    function calcularTempoJuntos() {
      const dataInicio = new Date(2022, 9, 23); // Outubro = 9
      const hoje = new Date();

      let anos = hoje.getFullYear() - dataInicio.getFullYear();
      let meses = hoje.getMonth() - dataInicio.getMonth();
      let dias = hoje.getDate() - dataInicio.getDate();

      if (dias < 0) {
        meses--;
        const ultimoMes = new Date(hoje.getFullYear(), hoje.getMonth(), 0);
        dias += ultimoMes.getDate();
      }

      if (meses < 0) {
        anos--;
        meses += 12;
      }

      const texto = `${anos} ano${anos !== 1 ? 's' : ''}, ${meses} mês${meses !== 1 ? 'es' : ''} e ${dias} dia${dias !== 1 ? 's' : ''}`;
      document.getElementById("tempo").textContent = texto;
    }

    calcularTempoJuntos();
  </script>

</body>
